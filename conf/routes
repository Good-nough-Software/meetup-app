# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                          controllers.LoginController.renderViewLogin
GET 	    /home		       controllers.HomeController.index
GET 	    /results		       controllers.HomeController.results

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

GET         /viewNewUser              controllers.newUserController.renderViewNewUser

GET         /viewResetPassword         controllers.resetPasswordController.renderViewResetPassword


GET         /viewUserAccountSettings             controllers.UserAccountSettingsController.renderViewUserAccountSettings


GET         /viewUserProfile                     controllers.UserProfileController.renderViewUserProfile

GET         /logout                              controllers.LoginController.logout()

GET         /test                                controllers.LoginController.test()

GET         /debug                               controllers.debugController.main

GET         /viewNewEvent                        controllers.AddNewEventController.renderViewAddEvent()

GET         /viewNonUserProfile/:userName        controllers.nonCurrentUserProfileController.renderNonCurrentUserProfileView(userName: String)


POST        /login                               controllers.LoginController.login()

POST        /createNewUser                       controllers.newUserController.createNewUser()

GET         /resetPassword                       controllers.resetPasswordController.resetPassword()

POST        /UserAccountSettings                 controllers.UserAccountSettingsController.UserAccountSettings()

POST        /UserProfile                         controllers.UserProfileController.UserProfile()

GET         /sendResetPassword                   controllers.resetPasswordController.sendResetPassword()

POST        /addNewEvent            controllers.AddNewEventController.addNewEvent()
