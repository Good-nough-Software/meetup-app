# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                          controllers.LoginController.renderViewLogin

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

GET         /viewNewUser               controllers.newUserController.renderViewNewUser


GET         /viewResetPassword        controllers.resetPasswordController.renderViewResetPassword


POST        /login                     controllers.LoginController.login()

POST        /createNewUser             controllers.newUserController.createNewUser()

POST        /resetPasswrod             controllers.resetPasswordController.resetPassword()
